{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2017",
    "moduleResolution": "node",
    "outDir": "build",
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "ES2017"],
    "removeComments": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "jsx": "react",
  },
  "references": [],
  "include": ["src/**/*"]
}
